import java.io.File;
import java.util.ArrayList;

import net.dv8tion.jda.core.EmbedBuilder;
import net.dv8tion.jda.core.events.message.guild.GuildMessageReceivedEvent;
import net.dv8tion.jda.core.hooks.ListenerAdapter;

public class Commands extends ListenerAdapter{
	
	private static ArrayList<String> list = new ArrayList<>();
	private static ArrayList<File> listimg = new ArrayList<>();
	
	static {
		list.add("–≠—Ç–æ –Ω–µ —Ç–≤–æ–µ!");
		list.add("–≠—Ç–æ –∑–µ–∫–æ–≤—Å–∫–∏–π —é–º–æ—Ä!");
		list.add("–ü–æ —Ç–≤–æ–µ–º—É —ç—Ç–æ —Å–º–µ—à–Ω–æ?");
		list.add("–ü–æ—à–ª–æ-–ø–æ–µ—Ö–∞–ª–æ!");
		list.add("–ï–±–∞—Ç—å —è —Å–∫–æ—Ä–æ—Å—Ç–Ω–æ–π");
		list.add("–î–∞, –∫—Å—Ç–∞—Ç–∏, —ç—Ç–æ –∫—Ä—É—Ç–æ");
		list.add("–¢–µ–±–µ –º–æ–∂–µ—Ç —É–µ–±–∞—Ç—å?");
		list.add("–ê—Ö —Ç—ã –≥–∞–¥");
		listimg.add(new File("C:\\Users\\User\\Desktop\\dpF7MOMPS7w.png"));
		listimg.add(new File("C:\\Users\\User\\Desktop\\z77W-U2S4Ac.jpg"));
		listimg.add(new File("C:\\Users\\User\\Desktop\\R3Eus8W10o8.jpg"));
	}

	@Override
	public void onGuildMessageReceived(GuildMessageReceivedEvent event) {
		if(event.getAuthor().isBot()) return;
		if(!event.getMessage().getContentRaw().startsWith("*")) return;
		String[] args = event.getMessage().getContentRaw().split(" ");
		switch(args[0]) {
		case "*plshelp":{
			EmbedBuilder info = new EmbedBuilder();
			info.setTitle("–®–æ —è –º–æ–≥—É?");
			info.setDescription("** *plsimg** - –†–∞–Ω–¥–æ–º–Ω–∞—è –ø–∏–∫—á–∞ üêôü¶Ä\n** *plsp** - –†–∞–Ω–¥–æ–º–Ω–∞—è –º–µ–º —Ñ—Ä–∞–∑–∞ üêôü¶Ä\n ** *plsap** - –î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤—É—é —Ñ—Ä–∞–∑—É\n(–ø—Ä–æ–±–µ–ª—ã –º–µ–Ω—è–π—Ç–µ –Ω–∞ -) üêôü¶Ä  ");
			info.setColor(0x99ffff);
			event.getChannel().sendMessage(info.build()).queue();
			break;
		}
		case "*plsimg":{
			event.getChannel().sendFile(listimg.get((int)(Math.random()*listimg.size()))).queue();
			break;
		}
		case "*plsp":{
			event.getChannel().sendMessage(list.get((int)(Math.random()*list.size()))).queue();
			break;
		}
		case "*plsap":{
			if(args.length==1) {
				event.getChannel().sendMessage("–ê—Ä–≥—É–º–µ–Ω—Ç–æ–≤ –Ω–µ —Ö–≤–∞—Ç–∞–µ—Ç").queue();
				return;
			}
			list.add(args[1].replace('-', ' '));
			event.getChannel().sendMessage("–§—Ä–∞–∑–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∞").queue();
			break;
		}
		case "*mod":{ 
			if(args.length==1) event.getChannel().sendMessage("**–í—Å–µ–≤—ã—à–Ω–∏–π: porludom**\n–ù—ã–Ω–µ—à–Ω–∏–π –º–æ–π –≤—Ç–æ—Ä–æ–π –ø–æ–∫—Ä–æ–≤–∏—Ç–µ–ª—å: "+event.getGuild().getMemberById(Main.idofmod).getEffectiveName()).queue();
			else { 
				if(event.getAuthor().getId().equals("313725871393472513")) { 
				Main.idofmod = args[1];
				event.getChannel().sendMessage("**–í—Å–µ–≤—ã—à–Ω–∏–π: porludom**\n–ù—ã–Ω–µ—à–Ω–∏–π –º–æ–π –≤—Ç–æ—Ä–æ–π –ø–æ–∫—Ä–æ–≤–∏—Ç–µ–ª—å: "+event.getGuild().getMemberById(Main.idofmod).getEffectiveName()).queue();;
				} 
				else event.getChannel().sendMessage("–ú—Å—å–µ, —Ö–æ–ª–æ–ø –º–µ–Ω—è—Ç—å –º–æ–¥–µ—Ä–∞ –Ω–µ –º–æ–∂–µ—Ç").queue();; 
			} 
			break; 
			}
		default:{
			event.getChannel().sendMessage("–ù–µ—Ç, —è —Ç–∞–∫–æ–µ –Ω–µ –∑–Ω–∞—é üêôü¶Ä").queue();
		}
		}
		
	}
	
}
